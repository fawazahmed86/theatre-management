  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Theatre Management User</a>
    <ul class = "navbar-nav navbar-right pull-right">
        <li class="nav-item"><a class="nav-link pull-right" href="#"><span class="glyphicon glyphicon-user"></span> {{username}}</a></li>
         <li class="nav-item"><a class="nav-link pull-right" href="/logout">logout</a></li>
      </ul>
  </nav>

  <div class="container">
    <div class="row main-section">
      <div class="col-md-12">
        <span>Select date: </span>
        <input id="date" data-date={{date}}>
      </div>
    </div>  

    <div class="row main-section">
      <div class="col-md-3 pageSections">
        <div class="row">
          <div class="col-md-12" id="movieDiv">
            <ul class="list-group shows">
              <li class="list-group-item section-heading">
                <h4>Movies</h4>
              </li>
              {{#each movies}}
              {{> movies/movie-block}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>

      <div class="col-md-5 pageSections">
        <div class="row">
          <div class="col-md-12" id="summaryDiv">
            <img id="cinema" src="/assets/images/cinema.jpg"></img>
          </div>
        </div>
      </div>

      <div class="col-md-4 pageSections">
        <div class="row">
          <div class="col-md-12" id="reservationDiv">
            <ul class="list-group shows">
              <li class="list-group-item section-heading">
                <h4>Reservations</h4>
              </li>
              {{#each reservations}}
              {{> reservations/reservation-block}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
      <input type="hidden" id="userIdInput" data-userid={{userId}}> 
    </div>

    <div id="showsModal" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Shows</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <div class="modal-body">
         </div>
       </div>
     </div>
   </div>

 </div>
